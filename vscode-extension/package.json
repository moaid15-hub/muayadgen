{
  "name": "oqool-vscode",
  "displayName": "oqool - AI Coding Assistant",
  "description": "AI-powered coding assistant with Arabic support - منافس Cursor و Windsurf",
  "version": "1.0.0",
  "publisher": "oqool",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oqool.openChat",
        "title": "oqool: Open Chat"
      },
      {
        "command": "oqool.review",
        "title": "oqool: Review Code"
      },
      {
        "command": "oqool.explain",
        "title": "oqool: Explain Code"
      },
      {
        "command": "oqool.fix",
        "title": "oqool: Fix Error"
      }
    ],
    "keybindings": [
      {
        "command": "oqool.openChat",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oqool",
          "title": "oqool",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "oqool": [
        {
          "id": "oqool.chatView",
          "name": "Chat"
        },
        {
          "id": "oqool.historyView",
          "name": "History"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0"
  }
}
